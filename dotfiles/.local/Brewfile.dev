brew "up"
# @brew [volta](https://volta.sh/) - Node version manager
brew "volta"
# @brew [waypoint](https://www.waypointproject.io/) - Tool to build, deploy, and release any application on any platform
tap "hashicorp/tap"
brew "hashicorp/tap/waypoint"
